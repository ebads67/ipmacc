include ../../../common/make.config
include ../../../common/arch.mk

CC := $(CUDA_DIR)/bin/nvcc $(ARCH)

INCLUDE := $(CUDA_DIR)/include -I.

# Example
# target: dependencies
	# command 1
	# command 2
          # .
          # .
          # .
	# command n

# link objects(binaries) together
a.out:		main.o
	$(CC)	main.o \
				-I$(INCLUDE) \
				-L$(CUDA_LIB_DIR)  \
				-lm -lcudart -o srad

# compile main function file into object (binary)
main.o: 	main.cu \
				define.c \
				graphics.c \
				extract_kernel.cu \
				prepare_kernel.cu \
				reduce_kernel.cu \
				srad_kernel.cu \
				srad2_kernel.cu \
				compress_kernel.cu
	nvcc	main.cu \
				-c -O3 -Xptxas -v $(ARCH)

# delete all object files
clean:
	rm *.o srad
